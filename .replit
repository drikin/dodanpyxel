modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Shooter Game"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Pyxel App"

[[workflows.workflow]]
name = "Shooter Game"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install pyxel && python build_and_run_pyxapp.py"

[[workflows.workflow]]
name = "Build Pyxel App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd temp_app && python build_and_run_pyxapp.py"

[deployment]
run = ["sh", "-c", "pip install pyxel && python build_and_run_pyxapp.py"]

